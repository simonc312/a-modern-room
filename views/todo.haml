/ A Modern Room Text Game App Interface

%div#todoapp
  %div.title
    %h1
      A Modern Room
      %div.content
        %div#create-todo
          %input#new-todo{"placeholder" => "What's your name?", "type" => "text"}/
          %span.ui-tooltip-top{"style" => "display:none;"} Press Enter to continue
        %div#todos
          %ul#todo-list
        %div#actions
          %ul#action-list
        %div#todo-stats

/ Templates

/ Can't figure out how to tell HAML not to escape the raw HTML lines
%script#item-template{"type" => "text/template"}
  <div class="todo <%= done ? 'done' : '' %>">
  %div.display
    <input class="check" type="checkbox" <%= done ? 'checked="checked"' : '' %> />
    %div.todo-text 
    %span#todo-destroy
  %div.edit
    %input.todo-input{"type" => "text", "value" =>""}/
  </div>

%script#action-template{"type" => "text/template"}
  <div class="action <%= enabled ? 'enabled' : '' %>">
  %div.display
    %div.action-text 
    %span#action-destroy
  </div>

%script#stats-template{"type" => "text/template"}
  <% if (total) { %>
  %span.todo-count
    %span.number <%= remaining %>
    %span.word <%= remaining == 1 ? 'item' : 'items' %>
    left.
  <% } %>
  <% if (done) { %>
  %span.todo-clear
    %a{"href" => "#"}
      Clear
      %span.number-done <%= done %>
      completed
      %span.word-done <%= done == 1 ? 'item' : 'items' %>
  <% } %>
